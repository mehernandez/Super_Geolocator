<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Bienvenido" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp" android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:id="@+id/btnIniciar"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/port"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TCP" android:checked="true"
            android:id="@+id/radioTCP" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UDP"
            android:id="@+id/radioUDP" />
    </RadioGroup>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="157.253.221.214"
        android:id="@+id/ip"
        android:textSize="20dp"
        android:layout_above="@+id/port"
        android:layout_alignLeft="@+id/port"
        android:layout_alignStart="@+id/port" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP :"
        android:textSize="20dp"
        android:layout_alignTop="@+id/ip"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="12345:1"
        android:id="@+id/port"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/btnIniciar"
        android:layout_alignStart="@+id/btnIniciar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puerto :"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/port"
        android:layout_toStartOf="@+id/port" />

</RelativeLayout>
